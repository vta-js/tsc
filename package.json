{
  "name": "@vta/tsc",
  "version": "1.1.4",
  "description": "compile Typescript files to Javascript files using Typescript and Babel",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "vta-tsc": "./dist/bin/vta-tsc.js"
  },
  "engines": {
    "node": ">= 10.16.0"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "build": "npm run lint && jest --config=jest.build.config.js",
    "npm-publish": "yarn run build && npm publish --access public --registry https://registry.npmjs.org",
    "test": "jest",
    "test:u": "jest --updateSnapshot",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "pre-commit": "yarn lint-staged",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "format-lock": "vta-format-npm-yarn-lock",
    "dep-upgrade": "yarn upgrade && yarn run format-lock"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "prettier --write",
      "eslint"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "keywords": [
    "vta",
    "TypeScript",
    "Babel"
  ],
  "author": "vta@yhbit.net",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vta-js/tsc.git"
  },
  "bugs": {
    "url": "https://github.com/vta-js/tsc/issues"
  },
  "homepage": "https://github.com/vta-js/tsc#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.0",
    "@babel/core": "^7.8.0",
    "@babel/plugin-transform-runtime": "^7.8.0",
    "@babel/preset-env": "^7.8.0",
    "@babel/preset-react": "^7.8.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@commitlint/travis-cli": "^8.2.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/glob": "^7.0.0",
    "@types/jest": "^25.0.0",
    "@types/node": "^13.0.0",
    "@types/react": "^16.9.0",
    "@types/tmp": "^0.1.0",
    "@vta/eslint-config-react": "^1.0.0",
    "@vta/eslint-config-typescript": "^1.0.0",
    "@vta/format-npm-yarn-lock": "^1.0.0",
    "conventional-changelog-cli": "^2.0.0",
    "cross-spawn": "^7.0.0",
    "eslint": "^6.6.0",
    "husky": "^4.0.0",
    "jest": "^25.0.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.0.0",
    "react": "^16.10.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.0.0",
    "typescript": "^3.8.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.0",
    "chalk": "^4.0.0",
    "commander": "^5.0.0",
    "core-js": "^3.6.0",
    "cross-spawn": "^7.0.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.0.0",
    "ora": "^4.0.0",
    "tmp": "^0.1.0"
  },
  "peerDependencies": {
    "typescript": "^3.8.0"
  }
}
